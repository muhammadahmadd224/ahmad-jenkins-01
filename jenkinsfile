pipeline {
    agent any

    environment {
        DOCKERHUB_USER = 'ahmadkhan0011'    // ğŸ”¹ your Docker Hub username
        IMAGE_NAME = 'node-app-1'           // ğŸ”¹ image name (same as before)
        IMAGE_TAG = 'v1'
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¥ Checking out code from GitHub...'
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Building Docker image...'
                sh 'docker build -t ${DOCKERHUB_USER}/${IMAGE_NAME}:${IMAGE_TAG} .'
            }
        }

        stage('Login to Docker Hub') {
            steps {
                echo 'ğŸ” Logging in to Docker Hub...'
                withCredentials([usernamePassword(credentialsId: 'dockerhub-cred', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    sh 'echo $PASS | docker login -u $USER --password-stdin'
                }
            }
        }

        stage('Push Image to Docker Hub') {
            steps {
                echo 'ğŸš€ Pushing Docker image...'
                sh 'docker push ${DOCKERHUB_USER}/${IMAGE_NAME}:${IMAGE_TAG}'
            }
        }

        stage('Clean Up') {
            steps {
                echo 'ğŸ§¹ Cleaning up local Docker images...'
                sh 'docker rmi ${DOCKERHUB_USER}/${IMAGE_NAME}:${IMAGE_TAG} || true'
            }
        }
    }

    post {
        success {
            echo 'âœ… Pipeline completed successfully!'
        }
        failure {
            echo 'âŒ Pipeline failed!'
        }
    }
}
